<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="690.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xogameclient.LoginController">
   <children>
      <AnchorPane layoutY="-6.0" prefHeight="698.0" prefWidth="225.0" style="-fx-background-color: white;">
         <children>
            <ImageView fx:id="leftImage" fitHeight="711.0" fitWidth="225.0" pickOnBounds="true">
               <image>
                  <Image url="@homeAssets/Panel.PNG" />
               </image>
            </ImageView>
            <ImageView fx:id="backBtn" fitHeight="55.0" fitWidth="56.0" layoutX="25.0" layoutY="14.0" onMouseClicked="#didPressBack" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@homeAssets/previous.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="725.0" prefHeight="705.0" prefWidth="232.0" style="-fx-background-color: white;">
         <children>
            <ImageView fx:id="rightImage" fitHeight="705.0" fitWidth="232.0" pickOnBounds="true">
               <image>
                  <Image url="@homeAssets/Panel2.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="225.0" prefHeight="692.0" prefWidth="501.0" style="-fx-background-color: white;">
         <children>
            <ImageView fx:id="backgroundImg" fitHeight="698.0" fitWidth="502.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="usernameImg" fitHeight="35.0" fitWidth="35.0" layoutX="112.0" layoutY="338.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@homeAssets/user.png" />
               </image>
            </ImageView>
            <TextField fx:id="usernameTxt" layoutX="162.0" layoutY="342.0" prefHeight="26.0" prefWidth="225.0" promptText="Username" style="-fx-background-radius: 15px;" />
            <ImageView fx:id="passwordImage" fitHeight="35.0" fitWidth="35.0" layoutX="112.0" layoutY="395.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@homeAssets/lock.png" />
               </image>
            </ImageView>
            <PasswordField fx:id="passwordTxt" layoutX="162.0" layoutY="400.0" prefHeight="26.0" prefWidth="225.0" promptText="Password" style="-fx-background-radius: 15px;" />
            <Button fx:id="loginBtn" layoutX="139.0" layoutY="463.0" mnemonicParsing="false" onAction="#didPressLogin" prefHeight="70.0" prefWidth="225.0" style="-fx-background-color: #631dd8; -fx-text-fill: transparent;" text="Login" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="registerBtn" layoutX="139.0" layoutY="557.0" mnemonicParsing="false" onAction="#handleRegisterButtonPress" prefHeight="75.0" prefWidth="225.0" style="-fx-background-color: #631dd8; -fx-text-fill: transparent;" text="Register">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <ImageView fx:id="logoImg" fitHeight="200.0" fitWidth="200.0" layoutX="151.0" layoutY="77.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@homeAssets/tic-tac-toe.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
